@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
@model IEnumerable<Day12Lab1.Models.Student>

@* <a asp-action="Create" asp-controller="Student" class="btn btn-primary">Create Student</a>
<!-- Cách 1: HTML thuần -->
<a href="/Admin/Student/Add" class="btn btn-primary">Create Student (HTML)</a>

<!-- Cách 2: Tag Helper theo tên action -->
<a asp-action="Create" asp-controller="Student" class="btn btn-success">Create Student (asp-action)</a>

@* <!-- Cách 3: Tag Helper theo route -->
<a asp-route="Admin/Student/Add" class="btn btn-warning">Create Student (asp-route)</a>*@

<a asp-action="Create" class="btn btn-primary">Create Student</a>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Ảnh</th>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(s.Avatar))
                    {
                        <img src="@s.Avatar" width="60" height="60" style="object-fit:cover; border-radius:50%;" />
                    }
                </td>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Branch</td>
                <td>@s.Gender</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        document.querySelector("table").style.backgroundColor = "yellow";
    </script>
}
